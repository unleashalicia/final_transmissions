html
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        script(src="assets/js/profile.js" type="text/javascript")
        link(rel="stylesheet" href="assets/css/profile.css" type="text/css")
        title Profile Page

    body
        #user-container
            .logOut-container.hide
                .logOut
                    h2 Confirm Log Out
                    button Yes
                    button No
            nav
                ul
                    li.profile Profile
                    li.stories Stories
                    li.log-out Log Out &#8594;
            .instruction.hide
                div
                    div You can only experience the story on a mobile device
                        span [close]
            .profile-container
                div
                    img.profile-photo(src="assets/images/profile/cat.jpg")
                .profile-data
                    p
                        span.profile-details USERNAME:
                        span.user-details-name= username
                        span.edit EDIT
                    p
                        span.profile-details EMAIL:
                        span.user-details-email= email
                        span.edit EDIT
                    form.account-settings.hide
                        label username
                        input.username(name="username" type="text")
                        label email
                        input.email(name="email" type="email")
                        .button-holder
                            button.submit SUBMIT CHANGES
                            button.cancel CANCEL
