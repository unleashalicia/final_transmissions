html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        link(rel="stylesheet" href="assets/css/library.css")
        link(rel="icon" type="image/png" href="../../assets/css/story.css")
        title Library
    body
        .warning 
            h1 This game is meant to be played in portrait mode. Please rotate your phone.
        section#story-container
            nav
                ul
                    li.nav-bar
                        a(href="/instructions") Instructions
                    li.nav-bar
                        a(href="/profile") Profile
                    li.nav-bar
                        a(href="/logout") Log Out
            .button-container
                a(href="/instructions")
                    button.nav-btn Instructions
                a(href="/profile")
                    button.nav-btn Profile
                a(href="/logout")
                    button.nav-btn Log Out
            .triangle-left
            .triangle-right
                
            each val in storydata
                    .story.initial-story
                        img.mobile(src="assets/images/mobile" + val.story_img.slice(val.story_img.search('/')))
                        img.desktop(src="assets/" + val.story_img)
                        .title
                            h1.title-text= val.name
                        if val.status

                            a.book-container(href='/story/id/' + val.id)
                                img.book(src='assets/images/library/book1.png')
                                    
                            if val.state_id
                                
                                button.continue Continue
                                    a.book-container(href='/story/id/' + val.id)
                                
                        else 
                            .lock-container
                                img.lock.mobile(src="assets/images/mobile/library/lock.png")
                                img.lock.desktop(src="assets/images/library/lock.png")
        script(src="assets/js/library.js")
